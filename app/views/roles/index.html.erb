<div class="container">
	<h5>Roles List</h5>
	<table class="table table-striped" style="width:70%">
		<thead style="width:70%">
			<tr>
				<th>Role Name</th>
				<th>Actions</th>
			</tr>
		</thead>
		<% @roles.each do |role| %>
		<tr>
			<td>
				<%= role.name %>
			</td>			
            <td>
                <%= link_to 'Edit', edit_role_path(role)  %> |
                <%= link_to 'Delete', role_path(role), method: :delete  %> | 
            </td>
		</tr>
		<% end %>
	</table>	
</div>

 <p><%= link_to 'Create Role', new_role_path %></p>